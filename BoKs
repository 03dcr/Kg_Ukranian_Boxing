  <script>
    function updateTimes() {
      const kyiv = new Date().toLocaleTimeString("uk-UA", { timeZone: "Europe/Kyiv" });
      const rome = new Date().toLocaleTimeString("it-IT", { timeZone: "Europe/Rome" });
      const berlin = new Date().toLocaleTimeString("de-DE", { timeZone: "Europe/Berlin" });

      document.getElementById("kyiv-time").textContent = kyiv;
      document.getElementById("rome-time").textContent = rome;
      document.getElementById("berlin-time").textContent = berlin;
    }
    setInterval(updateTimes, 1000);
    updateTimes();
  </script>
